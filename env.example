# ============================================================================
# CREATIVE INTELLIGENCE PLATFORM - Environment Variables
# ============================================================================
# Copy this to .env and fill in your values

# ----------------------------------------------------------------------------
# Clerk Authentication
# https://clerk.com/docs
# ----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# ----------------------------------------------------------------------------
# Google Cloud Platform
# https://cloud.google.com/docs/authentication/getting-started
# ----------------------------------------------------------------------------
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# GCS bucket for media storage
GCS_BUCKET=ltk-trending

# ----------------------------------------------------------------------------
# Pinecone Vector Database
# https://docs.pinecone.io/guides/get-started/quickstart
# ----------------------------------------------------------------------------
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=creative-embeddings
# PINECONE_ENVIRONMENT=us-east-1  # For serverless, not needed

# ----------------------------------------------------------------------------
# LLM Provider (for annotations)
# Choose one: OpenAI, Anthropic, etc.
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
# Or for Anthropic:
# ANTHROPIC_API_KEY=sk-ant-...

# ----------------------------------------------------------------------------
# Optional: Puppeteer for scraping
# ----------------------------------------------------------------------------
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
